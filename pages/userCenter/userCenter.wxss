.user-container {
	min-height: 100vh;
	background: #f6f6f6;
	padding: 20rpx;
  }
  
  .user-info {
	background: #fff;
	border-radius: 16rpx;
	padding: 40rpx;
	margin: 20rpx 0;
	display: flex;
	flex-direction: column;
	align-items: center;
  }
  
  .avatar-wrapper {
	padding: 0;
	width: 160rpx;
	height: 160rpx;
	border-radius: 50%;
	margin-bottom: 20rpx;
  }
  
  .avatar {
	width: 160rpx;
	height: 160rpx;
	border-radius: 50%;
  }
  
  .nickname {
	font-size: 32rpx;
	color: #333;
	margin-top: 20rpx;
	text-align: center;
  }
  
  .function-list {
	background: #fff;
	border-radius: 16rpx;
	margin-top: 30rpx;
  }
  
  .function-item {
	padding: 30rpx 20rpx;
  }