/* 地图容器样式 */
.map_container {
  width: 100%;
  position: relative;
}

.map {
  width: 100%;
  height: 100%;
}
.recommend-route-button {
  position: relative;
  width: 45px; /* 调整按钮的宽度，适应图标 */
  height: 45px; /* 按钮是正方形 */
  background-color: #007aff; /* 按钮背景色 */
  border-radius: 12px; /* 圆角效果 */
  box-shadow: 0px 4px 8px rgba(12, 12, 12, 0.2); /* 阴影效果 */
  display: flex;
  align-items: center; /* 水平居中对齐 */
  justify-content: center; /* 垂直居中对齐 */
  border: none; /* 无边框 */
}

.icon-with-text {
  display: flex;
  flex-direction: column; /* 垂直排列图标和文字 */
  align-items: center; /* 文字和图标居中对齐 */
  justify-content: center;
}
.icon-text {
  font-size: 9px; /* 设置文字大小 */
  color: white; /* 文字颜色 */
  text-align: center; /* 文字居中 */
    
}

.recommend-route-button t-icon {
  color: #ffffff; /* 图标颜色 */
}
/* movable-area 样式 */
.movable-area {
  width: 100%;
  height: 0%;
  position: fixed;
  bottom: 0;
  pointer-events: none;  /* 默认不响应事件 */
  left: 0;
  z-index: 0;
}

/* movable-view 样式 */
.movable-view {
  width: 100%;
  height: 50vh; 
  z-index: 20;
}

/* 抽屉样式 */
.drawer {
  width: 100%;
  height: 100%;
  background: #ffffff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  box-shadow: 0rpx -20rpx 40rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center; /* 垂直居中 */
  flex-direction: column; /* 垂直排列 */
}

.tab-content{
  height: 100%;
}

.drawer-content {
  padding: 30rpx;
}
.route-wrapper {
  position: relative;
  border: 1px solid #ddd; /* 默认边框颜色 */
  border-radius: 12px;    /* 圆角 */
  margin: 20px ;         /* 外边距 */
  background-color: #f9f9f9; /* 背景颜色 */
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* 阴影效果 */
  text-align: center;
  height: 35vh;
  overflow: hidden; /* 确保子元素不会溢出父容器 */
}

.route-wrapper-container{
  height: 100%;
}

.top-section {
  background: url('https://mmbiz.qpic.cn/mmbiz_jpg/HWrcmj1gz1lo2ic5iaKZMeFBtRdToISbckKs9yggy3azvVyQZBTVMr4q8Zj9k1T7YSS0xIHk2BH0Q3ksqibtRQiadA/640?wx_fmt=jpeg&tp=wxpic&wxfrom=5&wx_lazy=1&wx_co=1') no-repeat center center;
  background-size: cover; /* 背景图自适应容器 */
  height: 70%; /* 上部分占容器的一半高度 */
}
.picture-description{
  position: relative;
  color: rgb(252, 248, 248);
  font-size: 10px;

  top: 90%;
  width: auto;
}
.bottom-section {
  position: relative; /* 保证父容器为相对定位，使按钮的绝对定位基于父容器 */
  display: block; /* 保证父容器是块级元素 */
  background: linear-gradient(45deg, rgba(155, 149, 100, 0.849), rgba(34, 23, 2, 0)); /* 渐变色块，透明到黑色 */
  height: 30%; /* 下部分占容器的另一半高度 */
  padding-left: 10px; /* 可以添加一点左侧内边距，增加左边距 */
  padding-top: 20px;
}

.route-title{
  color: rgb(250, 250, 250); 
  text-align: left; /* 确保文本从左侧对齐 */
  display: block; /* 确保每个text都占一行，按照块级元素显示 */
  margin: 0; /* 去除默认的外边距 */
  font-weight:300
}
.route-description{
  color: rgb(250, 250, 250); 
  text-align: left; /* 确保文本从左侧对齐 */
  display: block; /* 确保每个text都占一行，按照块级元素显示 */
  margin: 0; /* 去除默认的外边距 */
  font-size: 12px;
  font-weight:100
}
/* 圆角渐变色椭圆按钮：两侧半圆，上下直线 */
.ellipse-button {
  position: absolute; /* 绝对定位 */
  top: 40%; /* 垂直居中 */
  right: 10px; /* 放置在父容器的右侧 */
  transform: translateY(-50%); /* 使按钮完全垂直居中 */
  
  background: linear-gradient(45deg,  rgba(173, 129, 48, 0),rgb(233, 109, 7));  /* 渐变色背景，橙色到粉色 */
  color: white; /* 文字颜色 */
  border: none; /* 去掉默认边框 */
  border-radius: 30px; /* 左右半圆效果，设置较大的圆角 */
  font-size: 12px; /* 字体大小 */
  text-align: center; /* 文字居中 */
  width:60px;
  height: 30px; /* 设置按钮高度 */
}

.ellipse-button:hover {
  opacity: 0.8; /* 悬停时按钮透明度变化 */
}

/* 遮罩层样式 */
.overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5); /* 半透明背景 */
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  }
/* 信息窗口样式 */
.info-window {
  overflow-y: auto; /* 启用垂直滚动 */
  overflow-x: hidden; /* 禁用水平滚动 */
  width: 80%;
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 16rpx;
  height: 70%;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }
/* 顶栏布局 */
.top-bar {
  display: flex;
  justify-content: center; /* 中心对齐整个内容 */
  align-items: center; /* 垂直居中 */
  padding-top: 5px;
  width: 100%; /* 父容器宽度 */
  position: relative; /* 使得关闭按钮相对定位 */
}

/* 标题居中 */
.title {
  text-align: center; /* 标题文本居中 */
  font-weight: bold;
  flex: 1; /* 确保标题占据容器内所有空间 */
}

/* 关闭按钮样式 */
.t-icon {
  width: 25px;
  height: 25px;
}
.custom-tabs {
  height: 90%;
}
.custom-panel {
  color: var(--td-text-color-primary);
}
.custom-panel__content {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}