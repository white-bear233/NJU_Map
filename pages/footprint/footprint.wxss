.container {
	padding: 24rpx;
	width: 100%;
	min-height: 100vh;
	box-sizing: border-box;
	background: #f5f5f5;
  }

  .route-list{
	  width: 100%;
  }
  
  .route-card {
	background: #ffffff;
	border-radius: 16rpx;
	padding: 24rpx;
	margin-bottom: 24rpx;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  }
  
  .card-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 24rpx;
  }
  
  .header-left {
	flex: 1;
  }


  .progress-section {
	margin: 20rpx 0;
  }
  
  .progress-label {
	font-size: 28rpx;
	color: #666;
	margin-bottom: 12rpx;
	display: block;
  }
  
  .progress-wrapper {
	width: 100%;
	margin-top: 8rpx;
  }

  
  .route-name {
	font-size: 36rpx;
	font-weight: 600;
	color: #333;
	margin-bottom: 12rpx;
  }
  
  .route-info {
	display: flex;
	align-items: center;
	gap: 16rpx;
	color: #666;
  }
  
  .info-text {
	font-size: 28rpx;
	margin-right: 24rpx;
  }
  
  .card-detail {
	border-top: 1rpx solid #eee;
	padding-top: 24rpx;
	margin-top: 12rpx;
  }
  
  .detail-block {
	margin-bottom: 32rpx;
  }
  
  .block-title {
	font-size: 25rpx;
	font-weight: 500;
	color: #333;
	margin-bottom: 16rpx;
	display: block;
  }
  
  .block-content {
	font-size: 28rpx;
	color: #666;
	line-height: 1.6;
  }
  
  .photo-grid {
	display: grid;
	grid-template-columns: repeat(3, 1fr);
	gap: 12rpx;
	margin-top: 16rpx;
  }
  
  .photo-wrapper {
	position: relative;
	padding-top: 100%;
  }
  
  .photo-item {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	border-radius: 8rpx;
	object-fit: cover;
  }