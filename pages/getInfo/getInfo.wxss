.container {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 20px;
}

.number-box {
  margin-top: 10px;
  display: inline-block;
  align-self: center;
  background-color: rgb(106, 0, 95);
  padding: 1px 8px;
  border-radius: 14px 0 14px 14px;
