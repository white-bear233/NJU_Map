.container {
  display: flex;
  flex-direction: column;
  height: 100vh; /* 适配屏幕高度 */
  background-color: #f5f5f5;
}

.camera {
  position: absolute; /* 绝对定位 */
  top: 0;
  left: 0;
  width: 100%;
  height: 70vh; /* 占据页面顶部70%高度 */
  background-color: black;
}

.location-status {
  height: 30%; /* 底部区域占据页面高度的30% */
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white;
  font-size: 36rpx;
  color: #333;
  text-align: center;
  box-shadow: 0 -10rpx 20rpx rgba(0, 0, 0, 0.1);
}

