/* components/SpotDetail/SpotDetail.wxss */.container {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 20px;
}

.number-box {
  margin-top: 10px;
  display: inline-block;
  align-self: center;
  background-color: rgb(106, 0, 95);
  padding: 1px 8px;
  border-radius: 14px 0 14px 14px;
  overflow: hidden;
}

.number {
  text-align: center;
}

.number-text {
  color: #ffffff;
  font-weight: bold;
}

.text-box {
  display: inline-block;
  align-self: center;
  padding-left: 8px;
}

.text {
  text-align: left;
}

.title {
  color: rgb(106, 0, 95);
  font-weight: bold;
}

.subtitle {
  color: rgb(106, 0, 95);
  font-size: 14px;
}



.section {
  font-size: 12px;
  margin: 10px;
}

.paragraph {
  background-color: #fcfcdc; /* 米色背景 */
  border-radius: 10px;  /* 圆角 */
  padding: 15px;  /* 内部的填充，避免文字贴边 */
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);  /* 可以加阴影效果 */
}

.highlight {
  color: rgb(106, 0, 95);
  font-weight: bold;
}

/* 父容器 */
.tab-panel {
  overflow-y: auto; /* 启用垂直滚动 */
  flex-direction: column; /* 垂直布局 */
  justify-content: center; /* 垂直方向上的居中 */
  align-items: center;    /* 水平方向上的居中 */
}

.image {
  margin-top: 15px;
  border-radius: 10px; /* 设置圆角 */
  border: 3px solid rgb(106, 0, 95); /* 紫色边框 */
  width: 95%;
  
}

.tabs{
  overflow-y: auto; /* 启用垂直滚动 */
}